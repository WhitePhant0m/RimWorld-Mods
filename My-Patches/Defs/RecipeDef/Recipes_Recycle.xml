<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>WP_RecycleApparel</defName>
    <label>recycle apparel</label>
    <description>Break down apparel like jacket into useful resources.</description>
    <jobString>Recycling apparel.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>TailoringSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <workSkill>Crafting</workSkill>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Smelted</li>
    </specialProducts>
    <fixedIngredientFilter>
      <categories>
        <li>Apparel</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowSmeltableApparel</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <forceHiddenSpecialFilters>
      <li>AllowNonSmeltableApparel</li>
      <li>AllowSmeltableApparel</li>
      <li>AllowBurnableApparel</li>
      <li>AllowNonBurnableApparel</li>
    </forceHiddenSpecialFilters>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef>
    <defName>WP_RecycleWeapon</defName>
    <label>recycle weapon</label>
    <description>Break down weapons into useful resources.</description>
    <jobString>Recycling weapon.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <workSkill>Crafting</workSkill>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Weapons</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <specialProducts>
      <li>Smelted</li>
    </specialProducts>
    <fixedIngredientFilter>
      <categories>
        <li>Weapons</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowSmeltable</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <forceHiddenSpecialFilters>
      <li>AllowNonSmeltableWeapons</li>
      <li>AllowSmeltable</li>
      <li>AllowBurnableWeapons</li>
      <li>AllowNonBurnableWeapons</li>
    </forceHiddenSpecialFilters>
    <recipeUsers>
      <li>ElectricSmithy</li>
      <li>FueledSmithy</li>
    </recipeUsers>
  </RecipeDef>
</Defs>