<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/HediffDef[defName="SoSHologram" or defName="SoSHologramMachine" or defName="SoSHologramArchotech"]/disablesNeeds</xpath>
    <value>
      <li>Rest</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>More Holograms</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/HediffDef[defName="MH_HologramMachine" or defName="MH_HologramArchotech" or defName="SoSHologramMachinePotato"]/disablesNeeds</xpath>
      <value>
        <li>Rest</li>
      </value>
    </match>
  </Operation>
</Patch>